@model IEnumerable<CompanyViewModel>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Organizational and legal Form</th>
                <th scope="col">Company size</th>
                <th scope="col">Action One</th>
                <th scope="col">Action Two</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.OrganizationalAndLegalForm</td>
                <td>@item.CountEmployees</td>
                <td>@Html.ActionLink("Edit", "Edit", "Company", routeValues: new { id = item.Id }, new { @class = "btn btn-outline-secondary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Company", routeValues: new { id = item.Id }, new { @class = "btn btn-outline-secondary" })</td>
            </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add", "Edit", "Company", null, new { @class = "btn btn-outline-secondary" })
}
else
{
<div>Companies don't exist. Try add.</div>
    @Html.ActionLink("Add", "Edit", "Company", null, new { @class = "btn btn-outline-secondary" })
}