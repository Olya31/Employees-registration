@model IEnumerable<EmployeeViewModel>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Surname</th>
                <th scope="col">Name</th>
                <th scope="col">Middle name</th>
                <th scope="col">Employment date</th>
                <th scope="col">Company</th>
                <th scope="col">Position</th>
                <th scope="col">Action One</th>
                <th scope="col">Action Two</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Surname</td>
                    <td>@item.Name</td>
                    <td>@item.MiddleName</td>
                    <td>@item.EmploymentDate.ToShortDateString()</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Position</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Employee", routeValues: new { id = item.Id }, new { @class = "btn btn-outline-secondary" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Employee", routeValues: new { id = item.Id }, new { @class = "btn btn-outline-secondary" })</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add", "Edit", "Employee", null, new { @class = "btn btn-outline-secondary" })
}
else
{
    <div>Employees don't exist. Try add.</div>
    @Html.ActionLink("Add", "Edit", "Employee", null, new { @class = "btn btn-outline-secondary" })
}
